    "preversion": "npm test",
    "start": "node ./node_modules/solid-app-kit/lib/cli public/",
    "test": "npm run build && npm run lint && npm run jest",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ledgerloops/nlt-kit.git"
  },
  "author": "Michiel B. de Jong",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ledgerloops/nlt-kit/issues"
  },
  "homepage": "https://github.com/ledgerloops/nlt-kit#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-jest": "^25.5.1",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "solid-app-kit": "^1.7.0",
    "source-map-loader": "^0.2.4",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "rdf-namespaces": "^1.8.0",
    "snap-checker": "^1.5.2",
    "snap-solid": "^2.0.3",
    "tripledoc": "^4.3.4",
    "uuid": "^7.0.3"
